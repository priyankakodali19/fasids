@{
    ViewBag.Title = "PostQuestion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PostQuestion</h2>

<form method="post" id="wysihtml-form">
    <div class="col-xs-11 col-xs-offset-1">Topic Icons &nbsp;&nbsp;&nbsp;
        <label class="radio-inline">
            <input id="inlineRadio1" type="radio" name="post_cat" value="1"/> None
        </label>
        <label class="radio-inline">
            <input id="inlineRadio2" type="radio" name="post_cat" value="2"/> Icon1
        </label>
        <label class="radio-inline">
            <input id="inlineRadio3" type="radio" name="post_cat" value="3"/> Icon2
        </label>
        <label class="radio-inline">
            <input id="inlineRadio4" type="radio" name="post_cat" value="4"/> Icon3
        </label>
        <label class="radio-inline">
            <input id="inlineRadio5" type="radio" name="post_cat" value="5"/> Icon4
        </label>
        <label class="radio-inline">
            <input id="inlineRadio6" type="radio" name="post_cat" value="6"/> Icon5

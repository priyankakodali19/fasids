@model WebApplication3.Models.ViewModel.ResetPassword

@{
    ViewBag.Title = "UserAccountSecurity";

}
<div class="panel panel-default">
    <div class="panel-heading"><h4>Change Your Passsord</h4></div>
    <div class="panel-body">
         <form role="form" method="post">
            @Html.AntiForgeryToken()
            <span class="alert-success">@ViewBag.Status</span> 
            <div class="row">
                <div class="col-xs-3 text-right">
                    <label for="OldPassword">Old password</label>
                </div>
                <div class="col-xs-5">
                   @Html.PasswordFor(model => model.OldPassword)
                    
                </div>
            </div>
            <div class="divide20"></div>
            <div class="row">
                <div class="col-xs-3 text-right">
                    <label for="NewPassword">New password</label><span class="red">*</span>
                </div>
                <div class="col-xs-5">
                     @Html.PasswordFor(model => model.NewPassword)
                   
                </div>
                <div class="divide20"></div>
            </div>
            <div class="divide20"></div>
            <div class="row">
                <div class="col-xs-3 text-right">
                    <label for="ConfirmNewPassword">New password again</label><span class="red">* </span>
                </div>
                <div class="col-xs-5">
                     @Html.PasswordFor(model => model.ConfirmNewPassword)
                   
                </div>
            </div>
            <div class="divide20"></div>
            <div class="row">
                <div class="col-xs-2 col-xs-offset-9" style="float:right;">
                    <button type="submit" value="ResetPassword" class="FasidsBtn btn btn-primary">Update Password</button>
                </div>
            </div>
        </form>
    </div>
</div>

